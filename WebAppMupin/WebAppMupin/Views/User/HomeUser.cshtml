@using WebAppMupin.Models

@model  IEnumerable<WebAppMupin.Models.HomeUser>

<!DOCTYPE html>

<html lang="it">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <style>
        #logout {
            float: right;
            position:absolute;
            margin-top: 1%
        }

        .card:hover {
            transform: scale(1.5);
            z-index:1;
        }

        .card {
            text-align: center;
        }
        img{
            width:200px;
            height:200px;
        }
    </style>
    <!-- CSS only -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-Zenh87qX5JnK2Jl0vWa8Ck2rdkQ2Bzep5IDxbcnCeuOxjzrPF/et3URy9Bv1WTRi" crossorigin="anonymous">


    <title>Home User</title>
</head>
<body>
   
    <button type="submit" id="logout" class="btn btn-warning"  onclick="location.href='/User/logout'" >Logout</button>
    <hr>
    <main>
        <!--  blocco da generare -->
        @foreach (HomeUser homeUser in Model)
        {
            <div class="row">
                <div class="col-sm-12 d-flex justify-content-center" onclick="location.href ='/User/Reperti?categoria=@homeUser.nome'">

                    <div class="card" id="@homeUser.nome" style="width: 18rem;">

                        <img src="data:image/jpg;base64,@(Convert.ToBase64String(homeUser.image,0,homeUser.image.Length))" class="card-img-top" alt="@homeUser.nome">
                        <div class="card-body">
                            <p class="card-text">@homeUser.nome</p>
                        </div>
                    </div>

                </div>
            </div>
        }


    </main>


    <!-- JavaScript Bundle with Popper -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.2.2/dist/js/bootstrap.bundle.min.js" integrity="sha384-OERcA2EqjJCMA+/3y+gxIOqMEjwtxJY7qPCqsdltbNJuaOe923+mo//f6V8Qbsw3" crossorigin="anonymous"></script>
</body>
</html>