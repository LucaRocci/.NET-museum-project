@using System.Data
@model DataTable

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Visualizzazione reperti</title>
</head>
<body>
    <button type="submit" id="logout" class="btn btn-warning" onclick="location.href='/User/Index'">Indietro</button>

    <table class="table table-striped">
        <thead>
            <tr>
                @foreach (DataColumn dataColumn in Model.Columns)
                {
                    <th scope="col">@dataColumn.ToString()</th>
                }
            </tr>
        </thead>
        <tbody>
            @foreach (DataRow data in Model.Rows)
            {
                <tr>
                    @foreach (DataColumn dataColumn in Model.Columns)
                    {
                        <td>@data[dataColumn].ToString()</td>
                    }

                </tr>

            }

        </tbody>
    </table>
</body>
</html>

