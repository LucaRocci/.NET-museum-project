@model  WebAppMupin.Models.setPassword

<html>
    <head>

        <title> Registrazione Password Utente @Model.utente </title>
    </head>
    <body>
        <form method="post" action="@Url.Action("createPassword")">
            <h4> Benvenuto nel sito @Model.utente Per completare la registrazione crea la tua password </h4>

            @if (!string.IsNullOrEmpty(Model.errorMessage))
            {
                <strong>@Model.errorMessage</strong>
            }
            <div class="form-group">
                <label> Inserisci la tua password </label>
                @Html.PasswordFor(p => p.Password)
            </div>

            <hr />
            <div class="form-group">
                <label>Ripeti la password</label>
                @Html.PasswordFor(p1 => p1.repeatPassword)
            </div>

            <button type="submit" class="btn btn-primary"> Conferma </button>

        </form>


        <script src="https://cdn.jsdelivr.net/npm/popperjs/core@2.11.6/dist/umd/popper.min.js" integrity="sha384-oBqDVmMz9ATKxIep9tiCxS/Z9fNfEXiDAYTujMAeBAsjFuCZSmKbSSUnQlmh/jp3" crossorigin="anonymous"></script>
        <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.2.2/dist/js/bootstrap.min.js" integrity="sha384-IDwe1+LCz02ROU9k972gdyvl+AESN10+x7tBKgc9I5HFtuNz0wWnPclzo6p9vxnk" crossorigin="anonymous"></script>

    </body>


</html>

